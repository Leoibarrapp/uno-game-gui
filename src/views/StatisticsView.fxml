<VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="780.0" prefWidth="700.0" style="-fx-background-color: #2E69C7;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StatisticsController">
   <children>
      <ToolBar prefHeight="52.0" prefWidth="710.0" style="-fx-background-color: a;">
        <items>
             <Button fx:id="btnSalir" mnemonicParsing="false" prefHeight="42.0" prefWidth="79.0" text="Volver" />
        </items>
         <padding>
            <Insets left="20.0" top="20.0" />
         </padding>
      </ToolBar>
      <BorderPane>
         <top>
             <Text fx:id="estadisticasTxt" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Estadisticas" BorderPane.alignment="CENTER">
                 <font>
                   <Font size="30.0" />
                 </font>
               <BorderPane.margin>
                  <Insets bottom="40.0" />
               </BorderPane.margin>
             </Text>
         </top>
         <center>
             <TableView fx:id="estadisticasTabla" prefHeight="600.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <columns>
                   <TableColumn fx:id="colJugador" prefWidth="208.0" text="Jugador" />
                   <TableColumn fx:id="colPuntaje" prefWidth="97.0" text="Puntaje" />
               </columns>
             </TableView>
         </center>
      </BorderPane>
   </children>
</VBox>
